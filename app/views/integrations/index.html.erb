<h1>Listing integrations</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @integrations.each do |integration| %>
      <tr>
        <td><%= integration.provider %></td>
        <td><%= link_to 'Destroy', integration_path(integration), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New integration', new_integration_path %>
